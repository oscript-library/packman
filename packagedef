ПутьКСценариюПараметров = ОбъединитьПути(ТекущийСценарий().Каталог, "src", "Модули", "ПараметрыСистемы.os");
ПараметрыСистемы_ЛокальнаяВерсия = ЗагрузитьСценарий(ПутьКСценариюПараметров);

Описание.Имя("packman")
		.Версия(ПараметрыСистемы_ЛокальнаяВерсия.ВерсияПродукта())
		.ЗависитОт("logos")
		.ЗависитОт("cmdline", "0.5")
		.ЗависитОт("v8runner")
		.ЗависитОт("asserts")
		.ЗависитОт("tool1cd")
		.ЗависитОт("strings")
		.ЗависитОт("tempfiles")
		.ВключитьФайл("src")
		.ВключитьФайл("tools/СборИнформацииОМетаданных.epf")
		.ВключитьФайл("tools/ПомощникСозданияМанифестаПоставки.epf")
		.ВключитьФайл("tools/ПомощникСозданияМанифестаПоставкиАсинх.epf")
		.ИсполняемыйФайл("src/packman.os");
